{* Latte template *}

{block content}
<div id="menu" class="clearfix">
    <a n:href="Produkty:new">Vytvořit</a>
</div>
<table class="center" id ="dataTable" >
    <thead>
        <tr>
            <td>Jazyk</td>
            <td>Nadpis</td>
            <td>Krátký popis</td>
            <td>Datum</td>
            <td>Akce</td>
        </tr>
    </thead>
    <tbody>
        {foreach $products as $product}
            <tr class="clickMe">
                <td>{$product->language}</td>
                <td><a n:href="Produkty:detail $product->id_product, $product->language"></a>{$product->title}</td>
                <td>{$product->short_description}</td>
                <td>{$product->date}</td>
                <td class="noClick"><a n:href="Produkty:edit $product->title">Edit</a></td>
            </tr>
        {/foreach}
    </tbody>
</table>
{/block} 
