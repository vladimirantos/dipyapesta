{* Latte template *}

{block content}
<h2 class="section">Upraven√≠ novinky</h2>
{form edit}
    {input oldLanguage value=>$oldLanguage}
    <table style="width:50%;" class="center">
        <tr>
            <td>{label language /}</td>
            <td>{input language}</td>
        </tr>
        <tr>
            <td>{label title/}</td>
            <td>{input title}</td>
        </tr>

        <tr>
            <td>{label content/}</td>
            <td>{input content style=>'width:100%'}</td>
        </tr>
        <tr>
            <td>{label main_image/}</td>
            <td>
                {if !empty($new->main_image)}
                    <img src="{$basePath}/images/gallery/{$new->main_image}" style="width:20%;">
                {/if}
                {input main_image}
            </td>
        </tr>

        <tr>
            <td class="textCenter" colspan="2">{input submit}</td>
        </tr>
    </table>
    <br>
    <br>

{/form}