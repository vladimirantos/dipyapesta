<html>
    <head>
        <link href="{$basePath}/css/screen.css" rel="stylesheet" type="text/css"/>
        <script src="{$basePath}/js/jquery.js" type="text/javascript"></script>
        <link href="{$basePath}/css/admin.less" rel="stylesheet" type="text/less"/>
        <script src="{$basePath}/js/libs/less/less.min.js" type="text/javascript"></script>
        <script src="{$basePath}/js/jquery.dataTables.js" type="text/javascript"></script>
        <link href="{$basePath}/css/jquery.dataTables.css" rel="stylesheet" type="text/css"/>
        <script src="{$basePath}/js/nette.ajax.js" type="text/javascript"></script>
        <script src="{$basePath}/js/netteForms.js" type="text/javascript"></script>
        <script src="{$basePath}/js/admin.js" type="text/javascript"></script>
        <script>
            $(document).ready(function () {
                $('#dataTable').DataTable();
                $("#dataTable").show();
            });
            $(function () {
                $.nette.init();
            });

        </script>
    </head>
    <body>
        <header>
            <div id="logo">
                Pomazánky | Administrace
                <div id="user">Bruno Puzják</div>
            </div>
        </header>
        <menu>
            <ul>
                <a n:href="Novinky:"><li class="{$active['novinky']}">Novinky</li></a>
                <a n:href="Produkty:"><li class="{$active['produkty']}">Produkty</li></a>
                <a n:href="Recepty:"><li class="{$active['recepty']}">Recepty</li></a>
                <a n:href=":Sign:out"><li class="{$active['odhlasit']}">Odhlásit se</li></a>
            </ul>
        </menu>
        {snippet messages}
            <div n:foreach="$flashes as $flash" class="flash {$flash->type}">{$flash->message}</div>
        {/snippet}
        <section id="content">
            {include content}
        </section>
        <footer>ahoj</footer>
    </body>
</html>