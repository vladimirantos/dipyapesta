{**
 * @param string   $basePath web base path
 * @param array    $flashes  flash messages
*}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="robots" content="ALL,FOLLOW">
        <meta http-equiv="Cache-Control" content="public">
        <title>{ifset #title}{include title|striptags} - {else}{$title} - {/ifset}Dipyapesta.cz</title>
        {if isset($words) && !empty($words)}
            <meta name="keywords" content="{$words}">
        {else}
            <meta name="keywords" content="dipy, pesta, balsamica, balsamika, koření, e-shop dipy, e-shop pesta, e-shop balsamica, e-shop balsamika, e-shop koření, dipy velkoobchod, pesta velkobchod, dipy velkoobchod, dipy maloobchod">
        {/if}
        {if isset($html) && !empty($html)}
            <meta name="description" content="{$html}">
        {else}
            <meta name="description" content="U nás naleznete ucelenou nabídku 100 % přírodních směsí bylin a koření pro rychlou přípravu pest a dipů ">
        {/if}

        <link href="{$basePath}/css/front.less" rel="stylesheet" type="text/less"/>
        <link href='http://fonts.googleapis.com/css?family=Roboto&amp;subset=latin,cyrillic' rel='stylesheet' type='text/css'>
        {block scripts}
        <script src="{$basePath}/js/libs/less/less.min.js" type="text/javascript"></script>
        <script src="{$basePath}/js/jquery.js"></script>
        <script src="{$basePath}/js/netteForms.js"></script>
        <script src="{$basePath}/js/main.js"></script>
        {/block}
        <link rel="shortcut icon" href="{$basePath}/favicon.ico">
        {block head}{/block}
    </head>

    <body class="clearfix">
        <header>
            <nav>
                <div id="logo" class="ClickMe"><a n:href="Homepage:"><img src="{$basePath}/images/logo.gif" alt="dip it logo"/></a></div>
                <div id="menu">
                    <img src="{$basePath}/images/menu.png" id="menuBtn" alt="">
                    <ul id="menuUl">
                        <li class="{$active['homepage']} ClickMe"> <a n:href="Homepage:"></a>ÚVOD
                            <img src="{$basePath}/images/activemenu.png" alt="">
                        </li>
                        <li class="{$active['products']} ClickMe"> <a n:href="Products:"></a>PRODUKTY
                            <img src="{$basePath}/images/activemenu.png" alt="">
                        </li>
                        <li> ESHOP
                            <img src="{$basePath}/images/activemenu.png" alt="">
                        </li>
                        {*<li> <a href="http://eshop.dipyapesta.cz" style="color: white; text-decoration:none" target="blank">ESHOP</a>*}
                        {*<img src="{$basePath}/images/activemenu.png" alt="">*}
                        {*</li>*}
                        <li class="{$active['news']} ClickMe"> <a n:href="News:"></a>NOVINKY
                            <img src="{$basePath}/images/activemenu.png" alt="">
                        </li>
                        <li class="{$active['recipes']} ClickMe"> <a n:href="Recipes:"></a>RECEPTY
                            <img src="{$basePath}/images/activemenu.png" alt="">
                        </li>
                        <li class="{$active['kontakt']} ClickMe"> <a n:href="Homepage:kontakt"></a>KONTAKT A PRODEJNY
                            <img style="height: 11px;margin-top: 6px" src="{$basePath}/images/activemenu.png" alt="">
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <aside>
            <ul>
                <li>
                    <a href="https://www.facebook.com/dipyapesta" target="blank"><img src="{$basePath}/images/facebook.png" alt="dip it facebook"/></a>
                </li>
                <li>
                    <img src="{$basePath}/images/youtube.png" alt="dip ip youtube"/>
                </li>
            </ul>
        </aside>
        <script> document.documentElement.className += ' js'</script>
        {include content}

        <div id="foot">
            <div class="content" style="font-size:10pt;">
                <span id="nav">
                    <a n:href="Homepage:">ÚVOD</a><br>
                    <a n:href="Products:">PRODUKTY</a><br>
                    <a href="">E-SHOP</a><br>
                    {*<a href="http://eshop.dipyapesta.cz" target="blank">E-SHOP</a><br>*}
                    <a n:href="News:">NOVINKY</a><br>
                    <a n:href="Recipes">RECEPTY</a><br>
                    <a n:href="Homepage:kontakt">PRODEJNY A KONTAKT</a><br>
                </span>
                <span id="contact">
                    Minikaravany s.r.o.<br>
                    IČO 02258510<br>
                    DIČ CZ02258510 <br><br>
                    <a href="mailto: info@dipyapesta.cz" style="color: white">info@dipyapesta.cz</a><br>
                    +420 774 18 90 60
                </span>
                <span id="recipe">
                    {if !empty($randomRecipe)}
                        <em class="title">NÁHODNÝ RECEPT | <a class="light" n:href="Recipes:" style="text-decoration: none">všechny recepty</a> </em>
                        <a n:href="Recipes:detail, $randomRecipe->id_recipe" style="text-decoration: none;color:white">
                            {$randomRecipe->description|truncate:300}
                        </a>
                    {/if}
                </span>
            </div>
        </div>
        <footer>
            <div class="content">
                <span class="left">&copy; 2015 Dip it | Všechna práva vyhrazena</span>
                <span class="right">Code: <i>Bruno Puzják &amp; Vladimír Antoš</i>  |  Graphic: <i>Tomáš Matucha</i></span>                
            </div>
        </footer>

    </body>
</html>
